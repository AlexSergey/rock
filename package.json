{
  "name": "rock",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "book",
    "next/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --config .eslintrc.production.js '**/*.{js,ts,tsx}' --quiet",
    "typing": "tsc --config tsconfig.production.json --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run typing && npm run lint"
    }
  },
  "devDependencies": {
    "lerna": "3.18.3"
  }
}