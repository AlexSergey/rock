{
  "name": "rockpack",
  "version": "1.6.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "book",
    "next/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "lerna run lint",
    "typing": "lerna run typing",
    "production": "lerna run production",
    "test": "lerna run test --stream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run typing",
      "pre-push": "npm run lint && npm run typing && npm test"
    }
  },
  "devDependencies": {
    "lerna": "3.22.1",
    "husky": "4.2.5"
  }
}
