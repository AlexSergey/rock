{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react",
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "noLib": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude":  [
    "./node_modules/**/*"
  ],
  "include": [
    "./src/**/*"
  ]
}
