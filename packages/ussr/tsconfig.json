{
  "compilerOptions": {
    "module": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "typeRoots" : [
    "./node_modules/@types",
    "../node_modules/@types",
    "./typings"
  ],
  "exclude":  [
    "./node_modules/**/*"
  ],
  "include": [
    "./src/**/*"
  ]
}
