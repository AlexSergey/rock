{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": ["esnext", "dom"],
    "typeRoots": [
      "./typings"
    ]
  },
  "exclude":  [
    "./node_modules/**/*"
  ],
  "include": [
    "./src/**/*"
  ]
}
